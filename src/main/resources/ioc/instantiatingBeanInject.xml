<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	       http://www.springframework.org/schema/beans
	       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		   http://www.springframework.org/schema/context
		   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- setterDependencyInject star -->
	<!-- 通过setter方式进行依赖注入 -->
	<bean id="bean5" class="com.spring.ioc.model.HelloImpl4">
		<property name="message" value="Hello World!" />
		<property name="index">
			<value>4</value>
		</property>
	</bean>

	<bean id="bean5_ref" class="com.spring.ioc.model.HelloImpl4">
		<property name="message" ref="message" />
		<property name="index" ref="index" />
	</bean>
	<!-- setterDependencyInject end -->


	<!-- booleanInject star -->
	<!-- boolean参数值可以用true/false -->
	<bean id="bean6_1" class="com.spring.ioc.model.BooleanTestBean">
		<property name="success" value="true" />
	</bean>
	<!-- boolean参数值可以用on/off -->
	<bean id="bean6_2" class="com.spring.ioc.model.BooleanTestBean">
		<property name="success" value="on" />
	</bean>
	<!-- boolean参数值可以用yes/no -->
	<bean id="bean6_3" class="com.spring.ioc.model.BooleanTestBean">
		<property name="success" value="yes" />
	</bean>

	<!-- boolean参数值可以用1/0 -->
	<bean id="bean6_4" class="com.spring.ioc.model.BooleanTestBean">
		<property name="success" value="1" />
	</bean>
	<!-- booleanInject star -->

	<!-- idRefInject star -->
	<bean id="string1" class="java.lang.String">
		<constructor-arg index="0" value="test" />
	</bean>
	<bean id="string2" class="java.lang.String">
		<constructor-arg index="0" value="test" />
	</bean>
	<bean id="bean7_1" class="com.spring.ioc.model.IdRefTestBean">
		<property name="id">
			<idref bean="string1" />
		</property>
	</bean>
	<bean id="bean7_2" class="com.spring.ioc.model.IdRefTestBean">
		<property name="id">
			<idref local="string2" />
		</property>
	</bean>
	<!-- idRefInject end -->

	<!-- listInject star -->
	<bean id="bean8" class="com.spring.ioc.model.ListTestBean">
		<property name="values">
			<list value-type="java.lang.String" merge="default">
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</list>
		</property>
	</bean>
	<!-- listInject end -->


	<!-- setInject star -->
	<bean id="bean9" class="com.spring.ioc.model.SetTestBean">
		<property name="values">
			<set>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</set>
		</property>
	</bean>
	<!-- setInject end -->

	<!-- collectionInject star -->
	<bean id="bean10_1" class="com.spring.ioc.model.CollectionTestBean">
		<property name="values">
			<list>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</list>
		</property>
	</bean>

	<bean id="bean10_2" class="com.spring.ioc.model.CollectionTestBean">
		<property name="values">
			<set>
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</set>
		</property>
	</bean>
	<!-- collectionInject end -->

	<!-- arrayInject star -->
	<bean id="bean11" class="com.spring.ioc.model.ArrayTestBean">
		<property name="array">
			<array value-type="java.lang.String" merge="default">
				<value>1</value>
				<value>2</value>
				<value>3</value>
			</array>
		</property>

		<property name="array2">
			<array>
				<array>
					<value>1</value>
					<value>2</value>
					<value>3</value>
				</array>
				<array>
					<value>4</value>
					<value>5</value>
					<value>6</value>
				</array>
			</array>
		</property>
	</bean>
	<!-- arrayInject end -->

	<!-- mapInject star -->
	<bean id="bean12" class="com.spring.ioc.model.MapTestBean">
		<property name="values">
			<map key-type="java.lang.String" value-type="java.lang.String">
				<entry>
					<key>
						<value>1</value>
					</key>
					<value>11</value>
				</entry>
				<entry key="2" value="22" />
			</map>
		</property>
	</bean>
	<!-- mapInject end -->

	<!-- propertiesInject star -->
	<bean id="bean13_1" class="com.spring.ioc.model.PropertiesTestBean">
		<property name="values">
			<props value-type="int" merge="default">
				<prop key="1">12sw</prop>
				<prop key="2">2</prop>
			</props>
		</property>
	</bean>

	<bean id="bean13_2" class="com.spring.ioc.model.PropertiesTestBean">
		<property name="values">
			<value>
				1=11
				2=22,
				3=33;
				4=44
			</value>
		</property>
	</bean>
	<!-- propertiesInject end -->

	<!-- beanInject star -->
	<!-- 定义依赖Bean -->
	<bean id="helloApi" class="com.spring.ioc.model.HelloImpl" scope="prototype" />
	<!-- 通过构造器注入 -->
	<bean id="bean14_1" class="com.spring.ioc.model.HelloApiDecorator">
		<constructor-arg index="0" ref="helloApi" />
	</bean>
	<!-- 通过构造器注入 -->
	<bean id="bean14_2" class="com.spring.ioc.model.HelloApiDecorator"
		scope="prototype">
		<property name="helloApi">
			<ref bean="helloApi" />
		</property>
	</bean>
	<!-- beanInject end -->

	<!-- beanInject star -->
	<!-- 注意父容器中也定义了id 为 helloApi的Bean -->
	<bean id="helloApi1" class="com.spring.ioc.model.HelloImpl4">
		<property name="index" value="2" />
		<property name="message" value="Hello Local!" />
	</bean>
	<!-- 通过local注入 -->
	<bean id="bean15_1" class="com.spring.ioc.model.HelloApiDecorator">
		<constructor-arg index="0">
			<ref local="helloApi1" />
		</constructor-arg>
	</bean>
	<!-- 通过parent注入 -->
	<bean id="bean15_2" class="com.spring.ioc.model.HelloApiDecorator">
		<property name="helloApi">
			<ref parent="helloApi1" />
		</property>
	</bean> 



	<bean id="bean17" class="com.spring.ioc.model.HelloApiDecorator">
		<property name="helloApi">
			<bean id="helloApi2" class="com.spring.ioc.model.HelloImpl" />
		</property>
	</bean>

	<bean id="beanIdref1" class="java.lang.String">
		<constructor-arg index="0" value="test" />
	</bean>

	<bean id="beanIdref2" class="java.lang.String">
		<constructor-arg index="0" value="test" />
	</bean>
	
	<bean id="idrefBean1" class="com.spring.ioc.model.IdRefTestBean">
		<property name="id">
			<idref bean="beanIdref1" />
		</property>
	</bean>

	<bean id="idrefBean2" class="com.spring.ioc.model.IdRefTestBean">
		<property name="id">
			<idref local="beanIdref2" />
		</property>
	</bean>



	<bean id="string3" class="java.lang.String">
		<constructor-arg index="0" value="test" />
	</bean>

	<bean id="message" class="java.lang.String">
		<constructor-arg index="0" value="Hello World!" />
	</bean>
	<bean id="index" class="java.lang.String">
		<constructor-arg index="0" value="4" />
	</bean>
</beans>
